

<header class="page-header">
  <h1>Posts</h1>
</header>


{{#if posts.length }}
  <table class="table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Email</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each posts as |post| }}
        <tr>
          <td>
            <a href="/posts/{{ post.id }}">{{ post.title }}</a>
          </td>
          <td>
            <a href="/posts/{{ post.id }}">{{ post.body }}</a>
          </td>
          <td>
            <a href="/posts/{{ post.id }}">{{ post.score }}</a>
          </td>
          <td>
            <a href="/posts/{{ post.id }}">{{ post.author }}</a>
          </td>
        </tr>
      {{/each }}
    </tbody>
  </table>
{{else }}
  <p class="text-danger">No users</p>
{{/if }}
